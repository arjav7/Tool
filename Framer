    max: 2,
    step: 0.1,
    defaultValue: 0.5,
  },
  friction: {
    type: ControlType.Number,
    title: "Friction",
    min: 0.9,
    max: 1,
    step: 0.01,
    defaultValue: 0.98,
  },
  bounciness: {
    type: ControlType.Number,
    title: "Bounciness",
    min: 0,
    max: 1,
    step: 0.1,
    defaultValue: 0.7,
  },
})
